doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    if subject
      title= subject
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css")
    style(type='text/css').
      a {
        color: white;
        text-decoration: none;
      }
      div {
        font-family: arial, sans-serif;
        color: black;
        font-size: 15px;
        padding: 3%;
        width: 60%;
        height: 50%;
        background-color: #FAFAFA;
        border-radius: 4px;
      }

      button {
        border-radius: 4px;
        border: none;
        background-color: #E82222;
        height: 40px;
        width: 105px;
        font-weight: 600;
        font-size: 13px;
      }
      img {
        width: 135px;
        height: 55px;
      }
  body
    <img src="cid:1234"/>
    div
      p To Whom It May Concern,
      |
      p #{body}
      |
      |
      p Regards,
      p Anonymous
      br
      <button><a href="http://localhost:3600/">heatMail</a></button>
      <button><a href="http://localhost:3600/remove/#{identifier}">unsubscribe</a></button


