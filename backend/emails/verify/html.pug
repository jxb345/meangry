doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    if subject
      title= subject
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css")
    style(type='text/css').
      a {
        color: white;
        text-decoration: none;
      }
      body {
        padding-left: 20px;
        padding-right: 20px;
      }
       button {
        border-radius: 3px;
        height: 45px;
        width: 90px;
        background-color: #F34B2E;
        color: white;
        margin: 0 auto;
        display: block;
        border: none;
        font-weight: 700;
        font-size: 15px;
        font-family: Georgia, "Times New Roman", Times, serif;
        font-weight: bold;
        transition-duration: 0.3s;
        letter-spacing: .07rem;
      }
      div.image-container {
        display: flex;
        justify-content: center
      }


       div.inner-container {
        font-family: georgia, serif;
        font-size: 16px;
        color: #2F4F4F;
        font-weight: 500;
        padding: 3%;
        width: 40%;
        height: 50%;
        background-color: #FAFAFA;
        border-top: 4px solid #f93b2b;
        border-radius: 4px;
        margin: 0 auto;
        text-align: center;
      }
       img {
        width: 135px;
        height: 55px;
        margin: 0 auto;
      }
      p.thanks-header {
        font-size: 17px
      }

  style.
    @media max-width: 600px {
        .inner-container {
            background-color: white;
        }
    }
  body
    div(class="outer-container")
      div(class="image-container")
        <img src="cid:1234"/>
      div(class="inner-container")
        p(class="thanks-header") Thanks for signing up to receive anonymous heatMail!
        p Please verify your email address.
        <button><a href="http://localhost:3600/verify/#{identifier}">Verify</a></button>

