      a {
        color: white;
        text-decoration: none;
      }
      body {
        padding-left: 20px;
        padding-right: 20px;
      }
       button {
        border-radius: 4px;
        border: none;
        background-color: #E82222;
        height: 45px;
        width: 125px;
        font-weight: 600;
        cursor: pointer;
      }
       div.image-container {
        margin-left: 11%;
      }

       div.inner-container {
        font-family: georgia, serif;
        font-size: 16px;
        color: #2F4F4F;
        font-weight: 500;
        padding: 3%;
        width: 70%;
        height: 50%;
        background-color: #FAFAFA;
        border-radius: 4px;
        margin: 0 auto;
        text-align: center;
      }
       img {
        width: 135px;
        height: 55px;
        margin: 0 auto;
      }
