
html
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    if subject
      title= subject
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css")
    style(type='text/css').

      a {
        color: #000000;
        text-decoration: none;
        font-weight: 900;
      }

      body {
         margin-left: 4%;
      }
      div {
        font-family: arial, sans-serif;
        color: #919191;
        font-size: 16px;
        padding: 3%;
        width: 90%;
        height: 38%;
        background-color: #F5F5F5;
        border-radius: 4px;
        text-align: center;
      }
      button {
        border-radius: 3px;
        height: 45px;
        width: 90px;
        background-color: #F34B2E;
        color: white;
        margin: 0 auto;
        display: block;
        border: none;
        font-size: .9em;
        font-family: Georgia, "Times New Roman", Times, serif;
        transition-duration: 0.3s;
        letter-spacing: .09rem;
      }
      h4 {
        color: #646262
      }
      img {
        width: 135px;
        height: 55px;
        padding-left: 23%;
      }
      p {
        padding-left: 1%;
      }
      .button {
        color: white;
        text-decoration: none;
      }

      @media (min-width: 500px) {
        body {
          padding-left: 22%;
        }
        div {
          width: 60%;
        }
        img {
          padding-left: 20%;
        }
      }

