

html
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    if subject
      title= subject
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css")
    style(type='text/css').
      a {
        color: white;
        text-decoration: none;
      }
      body {
         margin-left: 25%;
      }
      div {
        font-family: arial, sans-serif;
        color: #2F4F4F;
        font-size: 17px;
        font-weight: 500;
        padding: 4%;
        width: 60%;
        height: 40%;
        background-color: #F5F5F5;
        border-radius: 4px;
        text-align: center;
      }

      button, .submit-button {
        border-radius: 3px;
        height: 45px;
        width: 90px;
        background-color: #e82222;
        color: white;
        margin: 0 auto;
        display: block;
        border: none;
        font-weight: 700;
        font-size: 15px;
        font-family: Georgia, "Times New Roman", Times, serif;
        font-weight: bold;
        transition-duration: 0.3s;
        letter-spacing: .07rem;
      }
      img {
        width: 135px;
        height: 55px;
      }

      textarea {
        width: 430px;
        height: 145px;
        border-radius: 4px;
        border: 1px solid gray;
        margin-top: 8px;
        margin-bottom: 8px;
        font-size: large;
        padding: 3px;
        padding-top: 10px;
        padding-left: 10px;
      }
      p {
        font-size: medium;
      }

